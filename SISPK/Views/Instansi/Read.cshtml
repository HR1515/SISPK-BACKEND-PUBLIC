@*@model SISPK.Models.VIEW_INSTANSI*@
@{
    ViewBag.Title = "Instansi Detail";
    var Model = ViewBag.instansi_item;
}

<style>
    .isi {
        padding-top:5px;
        vertical-align:middle;
    }
</style>

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PORTLET-->
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Instansi Detail
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form class="form-horizontal form-bordered ng-pristine ng-valid" id="form-username" action="Create" method="post">
                    <div class="form-body">                        
                        <div class="form-group">
                            <label class="control-label col-md-3">Instansi Kode</label>
                            <div class="col-md-4">
                                <div class="input-icon right">
                                    <label class="isi">@Model.INSTANSI_CODE</label>
                                    
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Nama Instansi</label>
                            <div class="col-md-9">
                                <div class="input-icon right">
                                    <label class="isi">@Model.INSTANSI_NAME</label>
                                   
                                </div>
                            </div>
                        </div>                                               
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                   
                                    <a href="@Url.Action("Index")" class="btn default" type="button">Kembali</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
        </div>
        <!-- END PORTLET-->
    </div>
</div>
