@*@model SISPK.Models.VIEW_ANGGOTA*@
@{
    ViewBag.Title = "Detail SK SNI yang sudah di Publikasi";
    var Model = ViewBag.sni;
    var Amod = ViewBag.sninya;
    int no = 1;
}
<style>
    .isi {
        vertical-align: middle;
        padding-top: 5px;
    }
</style>

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PORTLET-->
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Detail SNI yang sudah di Publikasi
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form class="form-horizontal form-bordered ng-pristine ng-valid" id="sispk_form" action="Create" method="post" enctype="multipart/form-data">
                    <div class="form-body">


                        <div class="form-group">
                            <label class="control-label col-md-3">Nomor SNI</label>
                            <div class="col-md-5">
                                <div class="input-icon right">
                                    <label class="isi">@Amod.SNI_NOMOR</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">Jumlah Halaman SNI File</label>
                            <div class="col-md-5">
                                <div class="input-icon right">
                                    <label class="isi">@((ViewBag.doc.DOC_INFO == null) ? "-" : ViewBag.doc.DOC_INFO ) Halaman</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group" id="ics">
                            <label class="control-label col-md-3">Judul (IND)</label>
                            <div class="col-md-9">
                                <div style="text-align: left">
                                    <label class="isi">@Amod.SNI_JUDUL</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group" id="ics">
                            <label class="control-label col-md-3">Judul (ENG)</label>
                            <div class="col-md-9">
                                <div style="text-align: left">
                                    <label class="isi">@((Amod.SNI_JUDUL_ENG == null) ? "-" : @Amod.SNI_JUDUL_ENG)</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group" id="ics">
                            <label class="control-label col-md-3">Abstrak (IND)</label>
                            <div class="col-md-9">
                                <div style="text-align: left">
                                    <label class="isi">@Amod.PROPOSAL_ABSTRAK</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group" id="ics">
                            <label class="control-label col-md-3">Abstrak (ENG)</label>
                            <div class="col-md-9">
                                <div style="text-align: left">
                                    <label class="isi">@Amod.PROPOSAL_ABSTRAK_ENG</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group" id="ics">
                            <label class="control-label col-md-3">Ruang Lingkup (IND)</label>
                            <div class="col-md-9">
                                <div style="text-align: left">
                                    <label class="isi">@Amod.PROPOSAL_RUANG_LINGKUP</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group" id="ics">
                            <label class="control-label col-md-3">Ruang Lingkup (ENG)</label>
                            <div class="col-md-9">
                                <div style="text-align: left">
                                    <label class="isi">@Amod.PROPOSAL_RUANG_LINGKUP_ENG</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group" id="file_sni">
                            <label class="control-label col-md-3">SNI File</label>
                            <div class="col-md-4">
                                <div style="text-align: left">
                                    <a href="@ViewBag.doc.DOC_FILE_PATH@ViewBag.doc.DOC_FILE_NAME.@ViewBag.doc.DOC_FILETYPE" download>@ViewBag.doc.DOC_NAME</a>
                                </div>
                            </div>                            
                        </div>


                        @*<div class="form-group">
                            <label class="control-label col-md-3">Lampiran SK</label>
                            <div class="col-md-5">
                                <div class="input-icon right">
                                    @if (Model.DOC_FILE_NAME != null)
                                    {
                                        <label class="isi"><a href="~/@Model.DOC_FILE_PATH@Model.DOC_FILE_NAME.@Model.DOC_FILETYPE">@Model.DOC_FILE_NAME.@Model.DOC_FILETYPE</a></label> 
                                    }
                                    else{
                                        <label class="isi">-</label>
                                    }
                                                                       
                                </div>
                            </div>
                        </div>*@

                        @* <div class="form-group">
                            <label class="control-label col-md-3">Daftar SNI</label>
                            <div class="col-md-9" style="padding-top: 20px; padding-bottom: 0px">
                                    <div class="detailtext">
                                        <ol style="padding-left: 15px;">
                                            @foreach (var sni in ViewBag.listsni)
                                            {
                                                <li>(@sni.SNI_NOMOR) @sni.SNI_JUDUL</li>                                                
                                            }
                                        </ol>
                                    </div>
                                </div>
                        </div>   *@

                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <input type="hidden" value="@Amod.SNI_ID" name="SNI_ID" id="SNI_ID"/>
                                    <a href="@Url.Action("Index")" class="btn default" >Kembali</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
        </div>
        <!-- END PORTLET-->
    </div>
</div>
