@{
    ViewBag.Title = "Bidang";
}

<div class="row">
    <div class="col-md-12 ">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Daftar Bidang
                </div>
                <div class="actions">
                    <a class="btn btn-warning " href="@Url.Action("create")">
                        <i class="fa fa-plus"></i>Tambah Bidang</a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="tabbable-custom ">
                    <ul class="nav nav-tabs ">
                        <li class="active">
                            <a href="#aktif" data-toggle="tab" >Bidang Aktif </a>
                        </li>
                        <li>
