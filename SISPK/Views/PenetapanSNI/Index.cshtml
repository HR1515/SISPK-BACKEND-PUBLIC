@{
    ViewBag.Title = "SNI Sudah Ditetapkan";
}

<div class="row">
    <div class="col-md-12 ">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Daftar SNI yang Sudah diverifikasi
                </div>
                <div class="actions">
                    <a class="btn btn-warning " href="@Url.Action("create")">
                        <i class="fa fa-plus"></i>Buat Penetapan
                    </a>
                </div>
            </div>

            <div class="portlet-body">
                <div class="tabbable-custom ">
                    <ul class="nav nav-tabs ">
                        <li class="active">
                            <a href="#aktif" data-toggle="tab">SNI Belum ditetapkan</a>
                        </li>
                        <li>
                            <a href="#non-aktif" data-toggle="tab">SNI Sudah ditetapkan</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="aktif">
                            <table class="table table-striped table-bordered table-hover" id="sni1">
                                <thead>
                                    <tr>
                                        <th class="text-center">
                                            Tanggal<br />
                                            Usulan
                                        </th>
                                        <th class="text-center">Kode<br />PNPS</th>
                                        <th class="text-center">Kode<br />Komtek</th>
                                        <th class="text-center">
                                            Jenis<br />
                                            Perumusan
                                        </th>
                                        <th class="text-center">Judul</th>
                                        <th class="text-center">Mendesak</th>
                                        @*<th class="text-center">Tahapan</th>*@
                                        <th width="5%" class="text-center">Status</th>
                                        <th width="80px" class="text-center test">Aksi</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>

                        <div class="tab-pane" id="non-aktif">
                            <table class="table table-striped table-bordered table-hover" id="sni2">
                                <thead>
                                    <tr>
                                        <th width="15%" class="text-center">NOMOR SK </th>
                                        <th width="30%" class="text-center">Tanggal SK</th>
                                        <th width="10%" class="text-center">Jumlah SNI</th>
                                        <th width="30%" class="text-center">Keterangan</th>
                                        <th width="15%" class="text-center">Aksi</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>


    </div>
</div>

<script type="text/javascript">
    jQuery(document).ready(function () {
        var table1 = $('#sni1');
        var oTable = table1.dataTable({
