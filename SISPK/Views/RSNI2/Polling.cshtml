<script type="text/javascript">
    function tutuppolling(POLLING_ID, PROPOSAL_ID) {
        bukaloading();
        var formData = $(".kirim").serializeObject();
        $.ajax({
            type: 'POST',
            url: "/Perumusan/RSNI2/TutupPolling",
            contentType: "application/json",
            dataType: 'json',
            data: JSON.stringify(formData)
        }).done(function (data) {
            $.when(tutuploading()).then(window.location = "/Perumusan/RSNI2");
        });
    }
    function tutuppollingkonfirmasi(POLLING_ID, PROPOSAL_ID) {
        bootbox.dialog({
            message: "Anda yakin Menutup Polling Ini?",
            title: "Konfirmasi Penutupan Voting Kesepakatan",
            buttons: {
                success: {
                    label: "Yakin",
                    className: "green",
                    callback: function () {
                        tutuppolling(POLLING_ID, PROPOSAL_ID);
                    }
                },
                danger: {
                    label: "Batal",
                    className: "red",
                    callback: function () {

                    }
                }
            }
        });
    }
    function getpolling(PROPOSAL_ID) {
        $('#lakukanpolling').modal('show');
    }
    function setpolling() {
        bukaloading();
        var formData = $(".kirim").serializeObject();
        var PROPOSAL_ID = $('#PROPOSAL_ID').val();
        $.ajax({
            type: 'POST',
            url: "/Perumusan/RSNI2/SetVoteUser",
            contentType: "application/json",
            dataType: 'json',
            data: JSON.stringify(formData)
        }).done(function (data) {
            $.when(tutuploading()).then(window.location = "/Perumusan/RSNI2/Polling/" + PROPOSAL_ID);
        });
    }
    function setpollingkonfirmasi() {
        bootbox.dialog({
            message: "Anda yakin menyimpan Data ini ?",
            title: "Konfirmasi Persetujuan Voting Kesepakatan",
            buttons: {
                success: {
                    label: "Yakin",
                    className: "green",
                    callback: function () {
                        setpolling();
                    }
                },
                danger: {
                    label: "Batal",
                    className: "red",
                    callback: function () {

                    }
                }
            }
        });
    }
    function simpan_polling() {

        var formData = $(".kirim").serializeObject();
        if ($('#sispk_form').valid()) {
            $('#lakukanpolling').modal('hide');
            bukaloading();
            $.ajax({
                type: 'POST',
                url: "/Perumusan/RSNI2/SetPolling",
                contentType: "application/json",
                dataType: 'json',
                data: JSON.stringify(formData)
            }).done(function (data) {
                $.when(tutuploading()).then(window.location = "/Perumusan/RSNI2");
            });
        }
    }
    function simpanrsni(PROPOSAL_ID, Tipe) {
        bootbox.dialog({
            message: "Anda yakin menyimpan Data RSNI ini ?",
            title: "Konfirmasi Persetujuan Penyimpanan RSNI",
            buttons: {
                success: {
                    label: "Yakin",
                    className: "green",
                    callback: function () {
                        bukaloading();
                        var RSNI = CKEDITOR.instances.rsni1content.getData();
                        var formData = { PROPOSAL_ID: PROPOSAL_ID, Tipe: Tipe, rsni1contents: RSNI };
                        $.ajax({
                            type: 'POST',
                            url: "/Perumusan/RSNI2/Create",
                            contentType: "application/json",
                            dataType: 'json',
                            data: JSON.stringify(formData)
                        }).done(function (data) {
                            $.when(tutuploading()).then(window.location = "/Perumusan/RSNI1");
                        });
                    }
                },
                danger: {
                    label: "Batal",
                    className: "red",
                    callback: function () {

                    }
                }
            }
        });
    }

    function cari_dokumen(ini) {
        var tipe = parseInt($(ini).attr('data-tipe'));
        var pencarian = $(ini).val();
        var id = parseInt($('#PROPOSAL_ID').val());

        var formData = { PROPOSAL_ID: id, SEARCH_NAME: pencarian, SEARCH_TIPE: tipe };
        $.ajax({
            type: 'POST',
            url: "/Perumusan/RSNI1/GetContentSearch",
            contentType: "application/json",
            dataType: 'json',
            data: JSON.stringify(formData)
        }).done(function (res) {
            var Dokumen = res.Dokumen;
            var i = Dokumen.length;
            var hasil = "";
            if (i > 0) {
                for (var d = 0; d < i; d++) {
                    hasil += '<li class="media dok_pen" data-id="' + Dokumen[d].DOC_ID + '" onclick="openreferensi(' + Dokumen[d].DOC_ID + ');">';
                    hasil += '<div class="media-body">';
                    hasil += '<h4 class="media-heading">' + Dokumen[d].DOC_NAME + '</h4>';
                    hasil += '<div class="media-heading-sub">';
                    hasil += Dokumen[d].DOC_CREATE_NAME;
                    hasil += '</div>';
                    hasil += ' <div class="isi_dokument_' + Dokumen[d].DOC_ID + '" style="display:none;"></div>';
                    hasil += '</div>';
                    hasil += '</li>';
                }
            } else {
                hasil += '<li class="media" style="background: #4d6178;">';
                hasil += '<div class="media-body">';
                hasil += '<div class="media-heading-sub" style="text-align:center;">';
                hasil += 'Data Tidak Ditemukan';
                hasil += '</div>';
                hasil += '</div>';
                hasil += '</li>';
            }
            if (tipe == 1) {
                $('ul.data_dok_pendukung').html(hasil);
            } else {
                $('ul.data_dok_referensi').html(hasil);
            }
        });
    }
    function openreferensi(id) {
        $('.firstactive').click();
        $('.dropdown-toggle').click();
        $('.susunrsnilayout').find('.deflayout').removeClass('col-md-12').addClass('col-md-6');
        var formData = { DOC_ID: id };
        var IsiContent = "";
        $.ajax({
            type: 'POST',
            url: "/Perumusan/RSNI1/GetContent",
            contentType: "application/json",
            dataType: 'json',
            data: JSON.stringify(formData)
        }).done(function (res) {
            IsiContent = res.data;
            $('.susunrsnilayout').append('<div class="col-md-6 newlayout" style="border-left:none;"><div id="infodetail" contenteditable="false">' + IsiContent + '</div></div>');
            CKEDITOR.inline('infodetail');
        });


    }

    jQuery(document).ready(function () {

        bukaloading();
        CKEDITOR.disableAutoInline = true;
        var ckEditor = CKEDITOR.replace('rsni1content');
        var dataref = jQuery('#res_data_referensi').html();
        var dataref2 = jQuery('#res_data_referensi_lain').html();
        var datarefjumlah = jQuery('#res_data_referensi').attr("data-jumlah");
        var dataref2jumlah = jQuery('#res_data_referensi_lain').attr("data-jumlah");
        $('ul.data_dok_pendukung').html(dataref);
        $('ul.data_dok_referensi').html(dataref2);
        $('.dok_pendukung_jml').html(datarefjumlah);
        $('.dok_referensi_jml').html(dataref2jumlah);

        ckEditor.on("instanceReady", function (ev) {
            tutupmenu();
            tutuploading();
        });
        $('.searchinput').keypress(function (e) {
            if (e.which == 13) {
                cari_dokumen(this);
            }
        });
        $('#bukaref').click(function () {
            var isOpen = parseInt($(this).attr('data-isOpen'));
            if (isOpen == 1) {
                $(this).attr('data-isOpen', 0);
                $(this).html('Buka Referensi');
            } else {
                $(this).attr('data-isOpen', 1);
                $(this).html('Tutup Referensi');
            }
            $('body').toggleClass('page-quick-sidebar-open');
        });
    });
    jQuery(document).ready(function () {
        $('.timepicker-no-seconds').timepicker({
            autoclose: true,
            minuteStep: 5,
            showMeridian: false
        });
        $('.date-picker').datepicker({
            orientation: "center",
