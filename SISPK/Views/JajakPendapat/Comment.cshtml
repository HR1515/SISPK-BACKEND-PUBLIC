                                                        </div>
                                                        <div class='text-right col-sm-6' style="padding-right: 0px;">
                                                            @if (i.POLLING_DETAIL_OPTION == 1 || i.POLLING_DETAIL_OPTION == 2)
                                                            {
                                                                <a class="icon-btn" href="javascript:;" style='font-weight: bold; font-size: 16px; height: 50px; padding: 5px 0 0;'>
                                                                    @i.POLLING_DETAIL_PASAL<div>PASAL</div>
                                                                </a>
                                                            }
                                                            else
                                                            {
                                                                <a class="icon-btn" href="javascript:;" style='font-weight: bold; font-size: 16px; height: 50px; padding: 5px 0 0;'>
                                                                    @i.POLLING_DETAIL_PASAL<div>Non-PASAL</div>
                                                                </a>
                                                            }

                                                        </div>

                                                        @*<div class='text-right col-sm-6' style="padding-right: 0px;">
                                                            <a class="icon-btn" href="javascript:;" style='font-weight: bold; font-size: 16px; height: 50px; padding: 5px 0 0;'>@i.POLLING_DETAIL_PASAL<div>PASAL</div>
                                                            </a>
                                                        </div>*@
                                                    </header>

                                                    <div class='clearfix'></div>
                                                    <div class="comment-post" style='padding-top: 10px;'>
                                                        @Html.Raw(i.POLLING_DETAIL_REASON)
                                                        @if (i.POLLING_DETAIL_FILE_PATH != "" && i.POLLING_DETAIL_FILE_PATH != null)
                                                        {
                                                            <label class="form-control-static"><a class="" href="@(i.POLLING_DETAIL_FILE_PATH)" target="_blank" style="color:green;">Lampiran Komentar</a></label><br>
                                                        }
                                                        @Html.Raw(edit)
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </article>
                                    }
                                }
                                else
                                {
                                    <span>Tanggapan Belum Tersedia</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END FORM-->
            </div>
        </div>
        <!-- END PORTLET-->
    </div>
</div>


