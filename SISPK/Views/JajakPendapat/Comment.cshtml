                                        nomor++;
                                        var edit = "";
                                        var no_row = "baris" + i.POLLING_DETAIL_ID;
                                        if (i.POLLING_DETAIL_CREATE_BY == Convert.ToInt32(Session["USER_ID"].ToString()))
                                        {
                                            edit = "<a href='/Perumusan/JajakPendapat/EditComment/" + i.POLLING_DETAIL_ID + "' ><i class='fa fa-pencil'></i> edit</a><br /><br />";
                                        }
                                    <article class="row" id="@no_row">
                                        <div class="col-md-12 col-sm-12 col-xs-12">
