                                            {
                                                <li>@an.ICS_CODE @((an.ICS_NAME_IND == null) ? an.ICS_NAME : an.ICS_NAME_IND)</li>
                                            }
                                        </ol>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="form-group">
                            <label class="control-label col-md-3">Judul PNPS</label>
                            <div class="col-md-9 control-label detailtext">
                                @Detail.PROPOSAL_JUDUL_PNPS
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Ruang Lingkup</label>
                            <div class="col-md-9 control-label detailtext">
                                @Detail.PROPOSAL_RUANG_LINGKUP
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Referensi</label>
                            <div class="col-md-7 control-label detailtext">
                                <a href="javascript:void(0)" id="bukaref" data-isopen="0" style="color: blue; text-decoration: none;">Buka Referensi</a>
                            </div>
                        </div>
                         @if (ViewBag.DetailHistoryRatek.Count > 0)
                        {
                            
                            <div class="form-group">
                                <label class="control-label col-md-3">Histori Pembahasan RSNI</label>
                                <div class="col-md-7 control-label detailtext">
                                    <ul style="padding-left: 15px;">
                                        @foreach (var i in ViewBag.DetailHistoryRatek)
                                        {
                                            <li>@((i.PROPOSAL_RAPAT_PROPOSAL_STATUS == 5) ? "Rapat Teknis" : "Rapat Konsensus") ke <b>@i.PROPOSAL_RAPAT_VERSION</b>, Tanggal <b>@Convert.ToDateTime(i.PROPOSAL_RAPAT_DATE).ToString("dd MMM yyyy")</b>, Hasil <b>@i.PROPOSAL_RAPAT_STATUS_APPROVAL</b></li>
                                        }
                                    </ul>
                                </div>
                            </div>
                            
                        }
                        @if (ViewBag.DefaultDokumen != null)
                        {
                            <div class="form-group">
                                <label class="control-label col-md-3">Data Pendukung</label>
                                <div class="col-md-7 control-label detailtext">
                                    <ol style="padding-left: 15px;">
                                        @if (ViewBag.SuratRT != null)
                                        { 
                                            <li><a href="@ViewBag.SuratRT.DOC_FILE_PATH@ViewBag.SuratRT.DOC_FILE_NAME.@ViewBag.SuratRT.DOC_FILETYPE" target="_blank" style="color: blue; text-decoration: none;">Surat Rapat Teknis</a></li>
                                        }
                                        @if (ViewBag.SRTP != null)
                                        {
                                            <li><a href="@ViewBag.SRTP.DOC_FILE_PATH@ViewBag.SRTP.DOC_FILE_NAME.@ViewBag.SRTP.DOC_FILETYPE" target="_blank" style="color: blue; text-decoration: none;">Surat Penyerahan RSNI 3</a></li>
                                        }
                                        @if (ViewBag.DefaultDokumen != null)
                                        {
                                            <li><a href="@ViewBag.DefaultDokumen.DOC_FILE_PATH@ViewBag.DefaultDokumen.DOC_FILE_NAME.@ViewBag.DefaultDokumen.DOC_FILETYPE" target="_blank" style="color: blue; text-decoration: none;">Data RSNI 3</a></li>
                                        }
                                        @if (ViewBag.Berita != null)
                                        {
                                            <li><a href="@ViewBag.Berita.DOC_FILE_PATH@ViewBag.Berita.DOC_FILE_NAME.@ViewBag.Berita.DOC_FILETYPE" target="_blank" style="color: blue; text-decoration: none;">Berita Acara</a></li>
                                        }

                                        @if (ViewBag.DaftarHadir != null)
                                        {
                                            <li><a href="@ViewBag.DaftarHadir.DOC_FILE_PATH@ViewBag.DaftarHadir.DOC_FILE_NAME.@ViewBag.DaftarHadir.DOC_FILETYPE" target="_blank" style="color: blue; text-decoration: none;">Daftar Hadir</a></li>
                                        }
                                        @if (ViewBag.Notulen != null)
                                        {
                                            <li><a href="@ViewBag.Notulen.DOC_FILE_PATH@ViewBag.Notulen.DOC_FILE_NAME.@ViewBag.Notulen.DOC_FILETYPE" target="_blank" style="color: blue; text-decoration: none;">Notulen</a></li>
                                        }
                                        @if (ViewBag.LTAS != null)
                                        {
                                            <li><a href="@ViewBag.LTAS.DOC_FILE_PATH@ViewBag.LTAS.DOC_FILE_NAME.@ViewBag.LTAS.DOC_FILETYPE" target="_blank" style="color: blue; text-decoration: none;">Laporan Tenaga Ahli Standardisasi</a></li>
                                        }
                                    </ol>
                                </div>
                            </div>
