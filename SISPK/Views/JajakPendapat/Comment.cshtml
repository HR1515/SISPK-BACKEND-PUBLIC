                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Jumlah Tanggapan</label>
                            <div class="col-md-7 control-label detailtext">
                                @Detail.POLLING_JML_PARTISIPAN Tanggapan
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-9">
                                <a class="btn red" href="@Url.Action("Index")">Kembali</a>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
        </div>
        <!-- END PORTLET-->
    </div>
</div>


<div class="row">
    <div class="col-md-12">
