@*@model SISPK.Models.VIEW_KOMTEK*@
@{
    ViewBag.Title = "Pengguna Publik Detail";
    var Model = ViewBag.pepude;
    }

<div class="row">
    <div class="col-md-12 ">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Pengguna Publik Detail
                </div>               
            </div>
            <div class="portlet-body form">                       
                            <form class="form-horizontal form-bordered" method="post">
                                <div class="form-body">

                                                          
                                     <div class="form-group" id="bidang">
                                        <label class="control-label col-md-3">Bidang</label>
                                        <div class="col-md-4">
                                            <div class="input-icon right">
                                                <input type="hidden" id="USER_ID" name="USER_ID" class="form-control" value="@Model.USER_ID">
                                                @Model.USER_PUBLIC_KTPSIM
                                                
                                            </div>
                                        </div>
                                    </div>                        

                                    <div class="form-group" id="instansi">
                                        <label class="control-label col-md-3">Instansi</label>
                                        <div class="col-md-4">
                                            <div class="input-icon right">
                                                @Model.USER_PUBLIC_NAMA_LENGKAP
                                                @*<input type="text" id="KOMTEK_INSTANSI_ID" name="KOMTEK_INSTANSI_ID" class="form-control" value="@Model.INSTANSI_NAME" readonly="read-only">*@
                                            </div>
                                        </div>
                                    </div>
                                                                                  
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Sekretariat</label>
                                        <div class="col-md-4">
                                            <div class="input-icon right">
                                                @Model.USER_PUBLIC_EMAIL                                                
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Alamat</label>
                                        <div class="col-md-9">
                                            <div class="input-icon right">
                                                @Model.USER_PUBLIC_TELPON
                                            </div>
                                        </div>
                                    </div>           
                                                                       
                                    <div class="form-actions">
                                        <div class="row">
                                            <div class="col-md-offset-3 col-md-9">
                                                <button class="btn green" type="submit"><i class="fa fa-check"></i>Setujui</button>
                                                <a href="@Url.Action("Penggunapublic")" class="btn default" >Kembali</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
            </div>
        </div>
    </div>
</div>


